.container {
    padding: 10px;
  }
  
  .header {
    display: flex;
    width: 200rpx;
    justify-content: flex-start; 
    align-items: center;
    margin-bottom: 10px;
    border-bottom: 2rpx solid #000000; 
    width: 90%; /* 设置宽度为 100% */
    height: 100rpx;
  }
  
  .title {
    font-size: 25px;
    font-weight: bold;
  }
  
  .button-container {
    display: flex;
    justify-content: space-between;
  }
  
  .submit-button {
    background-color: #f4511e;
    width: 48%; 
    border: none; 
    padding: 10rpx;
    font-size: 30rpx;
    border-radius: 30px;
  }
   .cancel-button {
    width: 48%;
    padding: 10rpx;
    font-size: 30rpx;
    border-radius: 30px;
    border: none; 
  }

  .add-button {
    background-color: #f4511e;
    color: white;
    border: none; 
    border-radius: 30px;
    padding: 5px 10px;
    border-radius: 30px;
    font-size: 14px;
  }
  
  .delete-button {
    color: black;
    border: none;
    padding: 10rpx 20rpx;
    border-radius: 30rpx;
    font-size: 28rpx;
    margin-top: 10rpx;
  }

/* row 样式 */
.row {
    margin-bottom: 20rpx;
    padding: 20rpx;
    background-color: #ffffff;
    border-radius: 10rpx;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
    width: 90%;
  }
  
  .cell {
    margin-bottom: 10rpx;
    font-size: 30rpx;
  }
  
  .label {
    font-weight: bold;
  }

  .modal {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.5);
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
  .modal-content {
    justify-content: center; 
    background-color: white;
    padding: 20px;
    width: 90%;
    border-radius: 8px;
    border-bottom: 2rpx solid #000000;
  }
  
  .modal-title {
    font-size: 20px;
    font-weight: bold;
    margin-bottom: 10px;
  }
  
  .picker-container {
    margin-bottom: 20rpx;
  }
  
  .picker {
    width: 100%;
    padding: 10rpx;
    font-size: 30rpx;
    background-color: #ffffff;
    box-sizing: border-box;
  }

  .input-container {
    display: flex;
    justify-content: center; 
    margin-bottom: 20rpx; 
  }

  .scroll-view {
    height: 550px; 
  }